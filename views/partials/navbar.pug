nav.navbar
  a.logo(href="/") berrybag.
  .search-box
    form(action="/search", method="GET")
      input(type="text", name="q", placeholder="Search..")
  ul.nav-icons
    li
      a(href="/cart")
        i.fas.fa-shopping-cart
        span#cart-count= cartCount || 0

    if user
      li
        a(href="/auth/profile") Profile
      li
        a(href="/auth/logout") Logout

      if user.is_admin
        li
          a(href="/admin/products") Manage Products
        li
          a(href="/admin/users") Manage Users

    else
      li
        a(href="/auth/signin") Sign in

nav.categories
  .category-container
    ul.category-links
      li: a(href="/products") Products
      li: a(href="/products?category=Cats") Cats
      li: a(href="/products?category=Toys") Toys
      li: a(href="/products?category=Accessories") Accessories 
